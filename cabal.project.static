-- Static build configuration for Linux (Alpine musl)
-- Usage: cabal build --project-file=cabal.project.static

import: cabal.project

-- Static linking flags for all local packages
package tcg-platform-cert-util
  ghc-options: -static -optl-static -optl-pthread -optl-no-pie

-- Package-specific flags
package crypton
  flags: -use_target_attributes
